<!DOCTYPE html>
<html>
  <head>
    <title>SweetyApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  <a class="navbar-brand" href="#">Sweety</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	      <% if current_user %>
	      	<% if current_user.is_user? %>
		      <li class="nav-item active">
		        <a class="nav-link" href="<%= new_glucose_level_path %>">Home <span class="sr-only">(current)</span></a>
		      </li>
		    <% end %>
	      
		      <li class="nav-item">
		        <a class="nav-link" href="<%= glucose_levels_path %>">Reports</a>
		      </li>
		    <% end %>
	    </ul>
	  </div>
	</nav>
	 <%= link_to "Log Out", destroy_user_session_path, method: :delete if current_user%>
  <body>
  	<%= flash[:notice]  %>
    <%= yield %>
  </body>
</html>
