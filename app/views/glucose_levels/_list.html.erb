<div class="row"> 
  <div class="col-9">
     <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Levels</th>
          <th scope="col">Created at</th>
          <% if current_user.role == User::ROLES[1] %>
            <th scope="col">Patient</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      <% @glucose_levels.each do |gl| %>
        <tr>
          <td><%= gl.glucose %></td>
          <td><%= gl.created_at.strftime("%Y-%m-%d") %></td>
          <% if current_user.role == User::ROLES[1] %>
            <td><%= gl.user.name %></td>
          <% end %>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-3">
    <% if @glucose_levels.present? %>
    Maximum reading point: <%= glucose_max_level(@glucose_levels)%><br>Minimum reading point: <%= glucose_min_level(@glucose_levels)%><br>Average reading point: <%= glucose_avg_level(@glucose_levels)%>
    <% end %>
  </div>
</div>